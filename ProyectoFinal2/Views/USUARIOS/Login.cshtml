@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --clr-main: #E2E8F0;
            --clr-main-dark: #242323;
            --clr-main-white: #fff;
            --clr-main2: #314158;
            --clr-main-light2: #45556C;
        }

        .iconclose {
            cursor: pointer;
            position: absolute;
            right: 8px;
            font-size: 1.2em;
            color: var(--clr-main);
            line-height: 57px;
        }

        .swal2-popup {
            border-radius: 20px;
        }

        .swal2-title.swal2-title {
            color: var(--clr-main2);
        }

        .swal2-confirm.custom-class {
            background-color: var(--clr-main2);
            color: #ffffff;
            border-radius: 0.6rem;
        }

        .swal2-cancel.custom-class {
            background-color: #cfcece;
            color: var(--clr-main2);
            border-radius: 0.6rem;
        }

        .swal2-confirm.custom-class:focus {
            box-shadow: 0 0 0 2px #da9ca3;
            border-color: #da9ca3;
            outline: none;
        }



        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: url('https://i.ibb.co/mV5sVqRq/background.jpg') no-repeat center center fixed;
            /*background-color: #1D293D;*/
            background-size: cover;
            background-position: center;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 20px 100px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 99;
            background-color: transparent; /* Modifica el color de fondo según tus preferencias */
        }

        .logo {
            font-size: 2em;
            color: var(--clr-main-white);
            user-select: none;
        }

        .navigation {
            display: none;
        }

            .navigation a {
                position: relative;
                font-size: 1.1em;
                color: var(--clr-main-white);
                text-decoration: none;
                font-weight: 500;
                margin-left: 40px;
            }

                .navigation a::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -6px;
                    width: 100%;
                    height: 3px;
                    background: var(--clr-main-white);
                    border-radius: 5px;
                    transform-origin: right;
                    transform: scaleX(0);
                    transition: transform .5s;
                }

                .navigation a:hover::after {
                    transform-origin: left;
                    transform: scaleX(1);
                }

            .navigation .btnLogin-popup {
                width: 130px;
                height: 50px;
                background: transparent;
                border: 2px solid var(--clr-main-white);
                outline: none;
                border-radius: 6px;
                cursor: pointer;
                font-size: 1.1em;
                color: var(--clr-main-white);
                font-weight: 500;
                margin-left: 40px;
                transition: .5s;
            }

                .navigation .btnLogin-popup:hover {
                    background: var(--clr-main-white);
                    color: #242323;
                }

        .wrapper {
            position: relative;
            width: 400px;
            height: 440px;
            background: transparent;
            border: 2px solid rgba(255, 255, 255, .5);
            border-radius: 20px;
            backdrop-filter: blur(20px);
            box-shadow: 0 0 30px rgba(0,0,0,.5);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            transform: scale(0);
            transition: transform .5s ease, height .2s ease;
        }

        .hidden {
            display: none;
        }

        .wrapper.active-popup {
            transform: scale(1);
        }

        .wrapper.active {
            height: 520px;
        }

        .wrapper .form-box {
            width: 100%;
            padding: 40px;
        }

            .wrapper .form-box.login {
                transition: transform .18s ease;
                transform: translate(0);
            }

        .wrapper.active .form-box.login {
            transition: none;
            transform: translateX(-500px);
        }

        .wrapper .form-box.register {
            position: absolute;
            transition: none;
            transform: translate(500px);
        }

        .wrapper.active .form-box.register {
            transition: transform .18s ease;
            transform: translate(0);
        }

        .wrapper .icon-close {
            position: absolute;
            top: 0;
            right: 0;
            width: 45px;
            height: 45px;
            background: var(--clr-main);
            font-size: 2em;
            color: var(--clr-main-dark);
            display: flex;
            justify-content: center;
            align-items: center;
            border-bottom-left-radius: 20px;
            cursor: pointer;
            z-index: 1;
        }

        .form-box h2 {
            font-size: 2em;
            color: var(--clr-main);
            text-align: center;
        }

        .input-box {
            position: relative;
            width: 100%;
            height: 50px;
            border-bottom: 2px solid var(--clr-main);
            margin: 30px 0;
        }

            .input-box label {
                position: absolute;
                top: 50%;
                left: 5px;
                transform: translateY(-50%);
                font-size: 1em;
                color: var(--clr-main);
                font-weight: 500;
                pointer-events: none;
                transition: .5s;
            }

            .input-box input:focus ~ label,
            .input-box input:valid ~ label {
                top: -5px;
            }

            .input-box input {
                width: 100%;
                height: 100%;
                background: transparent;
                border: none;
                outline: none;
                font-size: 1em;
                color: var(--clr-main);
                font-weight: 600;
                padding: 0 35px 0 5px;
            }

            .input-box .icon {
                position: absolute;
                right: 8px;
                font-size: 1.2em;
                color: var(--clr-main);
                line-height: 57px;
            }

        .remember-forgot {
            font-size: .9em;
            color: var(--clr-main);
            font-weight: 500;
            margin: -15px 0 15px;
            display: flex;
            justify-content: space-between;
        }

            .remember-forgot label input {
                accent-color: var(--clr-main);
                margin-right: 3px;
            }

            .remember-forgot a {
                color: var(--clr-main);
                text-decoration: none;
            }

                .remember-forgot a:hover {
                    text-decoration: undeline;
                }

        .btn {
            width: 100%;
            height: 45px;
            background: var(--clr-main);
            border: none;
            outline: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1em;
            color: var(--clr-main-dark);
            font-weight: 500;
        }

        .login-register {
            font-size: .9em;
            color: var(--clr-main);
            text-align: center;
            font-weight: 500;
            margin: 25px 0 10px;
        }

            .login-register p a {
                color: var(--clr-main);
                text-decoration: none;
                font-weight: 600;
            }

                .login-register p a:hover {
                    text-decoration: underline;
                }

        .toast {
            position: fixed;
            top: 625px;
            right: 30px;
            background-color: var(--clr-main);
            color: var(--clr-main-dark);
            padding: 10px;
            border-radius: 15px;
            opacity: 0.8;
            z-index: 9999;
        }

        .menu-icon {
            color: white;
            font-size: 24px;
            cursor: pointer;
            margin-left: auto;
        }

        .menu {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
        }

            .menu li {
                margin-right: 10px;
            }

            .menu a {
                color: white;
                text-decoration: none;
            }

        .btnLogin-popup {
            background-color: #fff;
            color: #333;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }


        @@media (max-width: 600px) {
            header {
                padding: 10px;
            }

            .logo {
                font-size: 1.5em;
            }

            .navigation {
                flex-direction: column;
                align-items: center;
                margin-top: 20px;
            }

                .navigation a {
                    margin: 10px 0;
                }

            .btnLogin-popup {
                margin: 10px 0;
            }

            .wrapper {
                width: 90%;
                height: auto;
                transform: scale(1);
            }

            .form-box {
                padding: 20px;
            }

            .toast {
                position: fixed;
                top: 25px;
                right: 75px;
                background-color: var(--clr-main);
                color: var(--clr-main-dark);
                padding: 10px;
                border-radius: 15px;
                opacity: 0.8;
                z-index: 9999;
            }




            .form-box.forgot {
                display: none;
            }

            /* Cuando el wrapper tenga la clase 'forgot', mostramos la tarjeta de recuperar */
            .wrapper.forgot .form-box.login,
            .wrapper.forgot .form-box.register {
                display: none;
            }

            .wrapper.forgot .form-box.forgot {
                display: block;
            }



        }

        /* === FORGOT: estado inicial oculto, como REGISTER === */
        .wrapper .form-box.forgot {
            position: absolute;
            transition: none;
            transform: translate(500px); /* fuera de vista, igual que register */
        }

        /* Cuando activas FORGOT, se muestra y las otras se van */
        .wrapper.forgot .form-box.login {
            transition: none;
            transform: translateX(-500px);
        }

        .wrapper.forgot .form-box.register {
            transition: none;
            transform: translateX(500px);
        }

        .wrapper.forgot .form-box.forgot {
            transition: transform .18s ease;
            transform: translate(0);
        }

    </style>
</head>
<body id="sweetAlertContainer">
    <div class="wrapper">
        <span class="icon-close">
            <ion-icon name="close"></ion-icon>
        </span>
        <div class="form-box login">
            <h2>Ingresar</h2>
            <?php
            include "./conexion.php";
            include "./controlador_login.php";
            ?>
            @if (ViewBag.Error != null)
            {
                <script>
                Swal.fire({
                icon: 'error',
                title: 'Acceso Denegado',
                text: '@ViewBag.Error'
                });
                </script>
            }

            <form asp-action="Login" asp-controller="USUARIOS" method="post">
                @Html.AntiForgeryToken()
                <div class="input-box">
                    <span class="icon"><ion-icon name="people"></ion-icon></span>
                    <input type="text" id="USUARIO" name="USUARIO" required>
                    <label>Usuario</label>
                </div>
                <div class="input-box">
                    <span class="iconclose" onclick="togglePasswordVisibility('contraseña')"><ion-icon id="icon1" name="lock-closed"></ion-icon></span>
                    <input type="password" id="contrasena" name="contrasena" required>
                    <label>Contraseña</label> 
                    <script>
                        function togglePasswordVisibility() {
                            var input = document.getElementById("contraseña");
                            var icon = document.getElementById("icon1");

                            if (input.type === "password") {
                                input.type = "text";
                                icon.setAttribute("name", "eye");
                            } else {
                                input.type = "password";
                                icon.setAttribute("name", "lock-closed");
                            }
                        }
                    </script>
                </div>
                <input type="submit" class="btn" name="btningresar" value="Ingresar">
                <div class="login-register">
                    <!--onclick="login(event)"-->
                    <p>¿No tienes cuenta? <a href="#" class="register-link">Registrar</a></p>
                </div>
                <div class="login-register">
                    <p>¿Olvidaste tu contraseña? <a href="#" class="forgot-link">Recuperar</a></p>
                </div>
            </form>
        </div>

        <div class="form-box register">
            <h2>Registrarse</h2>
            <form method="post" action="@Url.Action("Create", "USUARIOS")">
                @Html.AntiForgeryToken()
                <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input type="text" name="NOMBRECOMPLETO" required>
                    <label>Nombre completo</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail"></ion-icon></span>
                    <input type="text" name="USUARIO" required>
                    <label>Usuario</label>
                </div>
                <div class="input-box">
                    <span class="iconclose" onclick="togglePasswordVisibility2('contraseña')"><ion-icon id="icon2" name="lock-closed"></ion-icon></span>
                    <input type="password" name="CONTRASENA" required>
                    <label>Contraseña</label>
                    <script>
                        function togglePasswordVisibility2() {
                            var input = document.getElementById("contraseña2");
                            var icon = document.getElementById("icon2");

                            if (input.type === "password") {
                                input.type = "text";
                                icon.setAttribute("name", "eye");
                            } else {
                                input.type = "password";
                                icon.setAttribute("name", "lock-closed");
                            }
                        }
                    </script>
                </div>
                <input type="submit" class="btn" name="btnregistrar" value="Registrarse">
                <div class="login-register">
                    <p>¿Ya tienes cuenta? <a href="#" class="login-link">Ingresar</a></p>
                </div>
            </form>
        </div>


        <div class="form-box forgot">
            <h2>Recuperar contraseña</h2>
            @if (ViewBag.ErrorReset != null)
            {
                <script>
                Swal.fire({ icon:'error', title:'No se pudo actualizar', text:'@ViewBag.ErrorReset' });
                </script>
            }

            @if (ViewBag.ResetOk != null && ViewBag.ResetOk)
            {
                <script>
                Swal.fire({ icon:'success', title:'Contraseña actualizada', text:'Ya puedes iniciar sesión.' })
                .then(()=>{ window.location.href = "@Url.Action("Login","USUARIOS")"; });
                </script>
            }

            <form method="post" action="@Url.Action("ResetPassword","USUARIOS")">
                @Html.AntiForgeryToken()
                <div class="input-box">
                    <span class="icon"><ion-icon name="people"></ion-icon></span>
                    <input type="text" name="usuario" required>
                    <label>Usuario</label>
                </div>

                <div class="input-box">
                    <span class="iconclose" onclick="togglePasswordVisibility('nuevaContrasena')">
                        <ion-icon id="icon3" name="lock-closed"></ion-icon>
                    </span>
                    <input type="password" id="nuevaContrasena" name="nuevaContrasena" required>
                    <label>Nueva contraseña</label>
                    <script>
                        function togglePasswordVisibility(id) {
                            var input = document.getElementById(id);
                            var icon = document.getElementById("icon3");
                            if (input.type === "password") { input.type = "text"; icon.setAttribute("name", "eye"); }
                            else { input.type = "password"; icon.setAttribute("name", "lock-closed"); }
                        }
                    </script>
                </div>
                <input type="submit" class="btn" value="Guardar nueva contraseña">
                <div class="login-register">
                    <p>¿Recordaste? <a href="#" class="login-link">Ingresar</a></p>
                </div>
            </form>
        </div>
    </div>
