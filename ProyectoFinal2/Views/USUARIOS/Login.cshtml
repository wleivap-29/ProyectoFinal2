    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
    @if(ViewBag.RegistroExitoso != null && ViewBag.RegistroExitoso)
    {
        <text>
        Swal.fire({
            target: '#sweetAlertContainer',
            title: "Usuario Creado",
            showCancelButton: true,
            focusConfirm: false,
            confirmButtonText: "Ingresar",
            cancelButtonText: "Ok",
            icon: "success",
            html: "Usuario registrado correctamente. Ya puedes ingresar en el login.",
            customClass: {
                confirmButton: "swal2-confirm custom-class",
                cancelButton: "swal2-cancel custom-class",
                title: "swal2-title swal2-title",
            },
        }).then((result) => {
            window.location.href = "@Url.Action("Login","USUARIOS")";
        });
        </text>
    }
        // Estado inicial
        const wrapper = document.querySelector('.wrapper');
        wrapper.classList.add('active-popup');
        wrapper.classList.remove('active');
        wrapper.classList.remove('forgot');

        // Listeners para TODOS los enlaces
        const loginLinks = document.querySelectorAll('.login-link');
        const registerLinks = document.querySelectorAll('.register-link');
        const forgotLinks = document.querySelectorAll('.forgot-link');
        loginLinks.forEach(a => {
            a.addEventListener('click', (e) => {
                e.preventDefault();
                wrapper.classList.remove('active', 'forgot');   // volver a login
            });
        });
        registerLinks.forEach(a => {
            a.addEventListener('click', (e) => {
                e.preventDefault();
                wrapper.classList.remove('forgot');
                wrapper.classList.add('active');                // ir a register
            });
        });

        forgotLinks.forEach(a => {
            a.addEventListener('click', (e) => {
                e.preventDefault();
                wrapper.classList.remove('active');
                wrapper.classList.add('forgot');                // ir a forgot
            });
        });
        document.getElementById("cerrarsesion").addEventListener("click", function () {
        window.location.href = '@Url.Action("CerrarSesion", "USUARIOS")';
        });
    </script>
</body>
</html>